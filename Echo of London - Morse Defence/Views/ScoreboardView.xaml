<UserControl x:Class="Echo_of_London___Morse_Defence.Views.ScoreboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Echo_of_London___Morse_Defence.Views"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280"
             Background="#151b21">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="MenuButton">
            <Setter Property="Background" Value="#262c33"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontFamily" Value="OCR A Extended"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Foreground" Value="#029273"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="30,10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="SCOREBOARD"
                   FontFamily="OCR A Extended"
                   FontSize="60"
                   Foreground="#029273"
                   HorizontalAlignment="Center"
                   Margin="0,40,0,20"/>

        <Border Grid.Row="1" 
                Background="#262c33" 
                Margin="80,20" 
                Padding="20"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="#" 
                               FontFamily="OCR A Extended" FontSize="22" 
                               Foreground="#029273" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="NAME" 
                               FontFamily="OCR A Extended" FontSize="22" 
                               Foreground="#029273" FontWeight="Bold"/>
                    <TextBlock Grid.Column="2" Text="SCORE" 
                               FontFamily="OCR A Extended" FontSize="22" 
                               Foreground="#029273" FontWeight="Bold" 
                               HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="3" Text="WAVE" 
                               FontFamily="OCR A Extended" FontSize="22" 
                               Foreground="#029273" FontWeight="Bold" 
                               HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="4" Text="DIFF" 
                               FontFamily="OCR A Extended" FontSize="22" 
                               Foreground="#029273" FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="5" Text="HINTS" 
                               FontFamily="OCR A Extended" FontSize="22" 
                               Foreground="#029273" FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="6" Text="DATE" 
                               FontFamily="OCR A Extended" FontSize="22" 
                               Foreground="#029273" FontWeight="Bold" 
                               HorizontalAlignment="Right"/>
                </Grid>

                <Rectangle Grid.Row="0" Height="2" Fill="#029273" 
                           VerticalAlignment="Bottom" Margin="0,0,0,-5"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ScoresList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="140"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Rank}" 
                                               FontFamily="OCR A Extended" 
                                               FontSize="18" 
                                               Foreground="{Binding RankColor}"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding PlayerName}" 
                                               FontFamily="OCR A Extended" 
                                               FontSize="18" 
                                               Foreground="#12b491"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Score}" 
                                               FontFamily="OCR A Extended" 
                                               FontSize="18" 
                                               Foreground="#12b491" 
                                               HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3" 
                                               Text="{Binding Wave}" 
                                               FontFamily="OCR A Extended" 
                                               FontSize="18" 
                                               Foreground="#12b491" 
                                               HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="4" 
                                               Text="{Binding Difficulty}" 
                                               FontFamily="OCR A Extended" 
                                               FontSize="18" 
                                               Foreground="{Binding DifficultyColor}" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="5" 
                                               Text="{Binding Hints}" 
                                               FontFamily="OCR A Extended" 
                                               FontSize="18" 
                                               Foreground="{Binding HintsColor}" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="6" 
                                               Text="{Binding Date}" 
                                               FontFamily="OCR A Extended" 
                                               FontSize="14" 
                                               Foreground="#666" 
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <TextBlock x:Name="NoScoresText"
                           Grid.Row="1"
                           Text="NO SCORES YET"
                           FontFamily="OCR A Extended"
                           FontSize="30"
                           Foreground="#666"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,40">
            <Button Content="MENU" 
                    Style="{StaticResource MenuButton}" 
                    Foreground="#029273"
                    Click="Main_Click"/>
            <Button Content="CLEAR ALL" 
                    Style="{StaticResource MenuButton}" 
                    Foreground="#ff5555"
                    Click="ClearScores_Click"/>
        </StackPanel>
    </Grid>
</UserControl>