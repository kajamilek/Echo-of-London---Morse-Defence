<UserControl x:Class="Echo_of_London___Morse_Defence.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Echo_of_London___Morse_Defence.Views"
             mc:Ignorable="d"
             Background="#151b21"
             d:DesignHeight="720" d:DesignWidth="1280">

    <UserControl.Resources>
        <Style TargetType="Grid" x:Key="TypingCell">
            <Setter Property="Background" Value="#404a54" />
            <Setter Property="Margin" Value="10" />
        </Style>

        <Style TargetType="TextBlock" x:Key="TypingCellText">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="70" />
            <Setter Property="FontFamily" Value="OCR A Extended" />
            <Setter Property="Foreground" Value="#029273" />
        </Style>

        <Style TargetType="Grid" x:Key="MyGrid">
            <Setter Property="Background" Value="#262c33" />
            <Setter Property="Margin" Value="20" />
        </Style>

        <Style TargetType="TextBlock" x:Key="MyGridText">
            <Setter Property="Margin" Value="20" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="FontFamily" Value="OCR A Extended" />
            <Setter Property="Foreground" Value="#029273" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--LEWY PANEL-->
        <Grid Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource MyGrid}" Margin="20,20,40,20">
            <TextBlock Style="{StaticResource MyGridText}" HorizontalAlignment="Left">
                PUNKTY  <LineBreak />
                FALA    <LineBreak />
                ŻYCIA
            </TextBlock>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="2" Grid.RowSpan="4" Style="{StaticResource MyGrid}" Margin="20,20,40,20">
            <TextBlock Style="{StaticResource MyGridText}" VerticalAlignment="Top">
                ULEPSZENIA
            </TextBlock>
        </Grid>

        <!--ŚRODKOWY PANEL (RADAR)-->
        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="4" Style="{StaticResource MyGrid}" />

        <Grid Grid.Column="1" Grid.Row="4" Style="{StaticResource MyGrid}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Style="{StaticResource TypingCell}">
                <TextBlock Style="{StaticResource TypingCellText}" >•</TextBlock>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1" Style="{StaticResource TypingCell}">
                <TextBlock Style="{StaticResource TypingCellText}" >-</TextBlock>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="1" Style="{StaticResource TypingCell}">
                <TextBlock Style="{StaticResource TypingCellText}" >-</TextBlock>
            </Grid>
            <Grid Grid.Column="3" Grid.Row="1" Style="{StaticResource TypingCell}">
                <TextBlock Style="{StaticResource TypingCellText}" >•</TextBlock>
            </Grid>
            <Grid Grid.Column="4" Grid.Row="1" Style="{StaticResource TypingCell}">
                <TextBlock Style="{StaticResource TypingCellText}" >•</TextBlock>
            </Grid>
            <Grid Grid.Column="5" Grid.Row="1" Style="{StaticResource TypingCell}">
                <TextBlock Style="{StaticResource TypingCellText}" >•</TextBlock>
            </Grid>
        </Grid>

        <!--GRACZ-->
        <Rectangle Name="player" Height="20" Width="20" Fill="#12b491" Grid.Column="1" Grid.Row="0" Grid.RowSpan="4">
        </Rectangle>

        <!--PRAWY PANEL-->
        <Grid Grid.Column="3" Grid.RowSpan="4" Style="{StaticResource MyGrid}" Margin="40,20,20,20">
            <TextBlock Style="{StaticResource MyGridText}">
            ZGAPKA
            </TextBlock>
        </Grid>

        <Grid Grid.Column="3" Grid.Row="4" Margin="40,20,20,20">
            <Button FontSize="50" FontFamily="OCR A Extended" Foreground="#029273" Background="#262c33" BorderThickness="0" Click="Menu_Click">
                MENU
            </Button>
        </Grid>
    </Grid>
</UserControl>