<UserControl x:Class="Echo_of_London___Morse_Defence.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Echo_of_London___Morse_Defence.Views"
             mc:Ignorable="d"
             Background="#151b21"
             d:DesignHeight="720" d:DesignWidth="1280">

    <UserControl.Resources>
        <Style TargetType="Grid" x:Key="TypingCell">
            <Setter Property="Background" Value="#404a54" />
            <Setter Property="Margin" Value="10" />
        </Style>

        <Style TargetType="TextBlock" x:Key="TypingCellText">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="70" />
            <Setter Property="FontFamily" Value="OCR A Extended" />
            <Setter Property="Foreground" Value="#029273" />
        </Style>

        <Style TargetType="Grid" x:Key="MyGrid">
            <Setter Property="Background" Value="#262c33" />
            <Setter Property="Margin" Value="20" />
        </Style>

        <Style TargetType="TextBlock" x:Key="MyGridText">
            <Setter Property="Margin" Value="20" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="FontFamily" Value="OCR A Extended" />
            <Setter Property="Foreground" Value="#029273" />
        </Style>

        <Style TargetType="TextBlock" x:Key="StatLabel">
            <Setter Property="FontFamily" Value="OCR A Extended" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Foreground" Value="#029273" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style TargetType="TextBlock" x:Key="StatValue">
            <Setter Property="FontFamily" Value="OCR A Extended" />
            <Setter Property="FontSize" Value="28" />
            <Setter Property="Foreground" Value="#12b491" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,0,0,0" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- LEWY PANEL - STATYSTYKI -->
        <Grid Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource MyGrid}" Margin="20,20,40,20">
            <StackPanel VerticalAlignment="Center" Margin="15">
                <!-- PUNKTY - w linii -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="PUNKTY:" Style="{StaticResource StatLabel}" />
                    <TextBlock x:Name="ScoreText" Text="0" Style="{StaticResource StatValue}" />
                </StackPanel>

                <!-- FALA - w linii -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="FALA:" Style="{StaticResource StatLabel}" />
                    <TextBlock x:Name="WaveText" Text="1" Style="{StaticResource StatValue}" />
                </StackPanel>

                <!-- ŻYCIA - w linii -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="ŻYCIA:" Style="{StaticResource StatLabel}" />
                    <TextBlock x:Name="LivesText" Text="" 
                               Style="{StaticResource StatValue}" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="2" Grid.RowSpan="4" Style="{StaticResource MyGrid}" Margin="20,20,40,20">
            <TextBlock Style="{StaticResource MyGridText}" VerticalAlignment="Top">
                ULEPSZENIA
            </TextBlock>
        </Grid>

        <!-- RADAR -->
        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="4" Style="{StaticResource MyGrid}" Background="#003026">
            <Viewbox Stretch="Uniform"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Width="350" Height="350">

                <Canvas Width="400" Height="400">

                    <!-- koło -->
                    <Ellipse Width="400" Height="400"
                             Stroke="#029273" StrokeThickness="10"/>

                    <!-- pion -->
                    <Line X1="200" Y1="0" X2="200" Y2="400"
                          Stroke="#027159" StrokeThickness="4"/>

                    <!-- -30° -->
                    <Line X1="0" Y1="200" X2="400" Y2="200"
                          Stroke="#027159" StrokeThickness="4">
                        <Line.RenderTransform>
                            <RotateTransform Angle="-30" CenterX="200" CenterY="200"/>
                        </Line.RenderTransform>
                    </Line>

                    <!-- +30° -->
                    <Line X1="0" Y1="200" X2="400" Y2="200"
                          Stroke="#027159" StrokeThickness="4">
                        <Line.RenderTransform>
                            <RotateTransform Angle="30" CenterX="200" CenterY="200"/>
                        </Line.RenderTransform>
                    </Line>

                    <!-- TU POJAWIA SIĘ LITERA -->
                    <Canvas x:Name="LetterCanvas"
                            Width="400" Height="400"
                            IsHitTestVisible="False"/>

                    <!-- przeciwnicy -->
                    <Canvas x:Name="EnemyCanvas"
                            Width="400" Height="400"
                            IsHitTestVisible="False"/>

                </Canvas>
            </Viewbox>
        </Grid>

        <!-- Dół - Panel wprowadzania Morse'a -->
        <Grid Grid.Column="1" Grid.Row="4" Style="{StaticResource MyGrid}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Style="{StaticResource TypingCell}">
                <TextBlock x:Name="MorseSlot0" Style="{StaticResource TypingCellText}" />
            </Grid>
            <Grid Grid.Column="1" Style="{StaticResource TypingCell}">
                <TextBlock x:Name="MorseSlot1" Style="{StaticResource TypingCellText}" />
            </Grid>
            <Grid Grid.Column="2" Style="{StaticResource TypingCell}">
                <TextBlock x:Name="MorseSlot2" Style="{StaticResource TypingCellText}" />
            </Grid>
            <Grid Grid.Column="3" Style="{StaticResource TypingCell}">
                <TextBlock x:Name="MorseSlot3" Style="{StaticResource TypingCellText}" />
            </Grid>
            <Grid Grid.Column="4" Style="{StaticResource TypingCell}">
                <TextBlock x:Name="MorseSlot4" Style="{StaticResource TypingCellText}" />
            </Grid>
            <Grid Grid.Column="5" Style="{StaticResource TypingCell}">
                <TextBlock x:Name="MorseSlot5" Style="{StaticResource TypingCellText}" />
            </Grid>
        </Grid>

        <!-- gracz -->
        <Ellipse Name="player" Height="20" Width="20"
                   Fill="#12b491"
                   Grid.Column="1" Grid.Row="0" Grid.RowSpan="4"/>

        <!-- PRAWY PANEL - HINTS -->
        <Grid x:Name="HintsPanel"
              Grid.Column="3" Grid.RowSpan="4"
              Style="{StaticResource MyGrid}"
              Margin="40,20,20,20"
              Visibility="Collapsed">
            <StackPanel>
                <TextBlock Style="{StaticResource MyGridText}" Text="HINTS" />
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400">
                    <TextBlock x:Name="MorseDisplay"
                               FontFamily="OCR A Extended"
                               FontSize="28"
                               Foreground="#029273"
                               TextWrapping="Wrap"
                               Margin="10"/>
                </ScrollViewer>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="3" Grid.Row="4" Margin="40,20,20,20">
            <Button FontSize="50"
                    FontFamily="OCR A Extended"
                    Foreground="#029273"
                    Background="#262c33"
                    BorderThickness="0"
                    Click="Menu_Click">
                MENU
            </Button>
        </Grid>

        <!-- GAME OVER OVERLAY -->
        <Grid x:Name="GameOverOverlay"
              Grid.Column="0" Grid.ColumnSpan="3"
              Grid.Row="0" Grid.RowSpan="5"
              Background="#EE151b21"
              Visibility="Collapsed"
              Panel.ZIndex="100">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="GAME OVER"
                           FontFamily="OCR A Extended"
                           FontSize="80"
                           Foreground="#ff5555"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock x:Name="FinalScoreText"
                           Text="SCORE: 0"
                           FontFamily="OCR A Extended"
                           FontSize="50"
                           Foreground="#12b491"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock x:Name="FinalWaveText"
                           Text="WAVE: 1"
                           FontFamily="OCR A Extended"
                           FontSize="30"
                           Foreground="#029273"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Pole na nazwę gracza -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="NAME:"
                               FontFamily="OCR A Extended"
                               FontSize="28"
                               Foreground="#029273"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    <TextBox x:Name="PlayerNameTextBox"
                             Width="200"
                             FontFamily="OCR A Extended"
                             FontSize="24"
                             Background="#404a54"
                             Foreground="#12b491"
                             BorderBrush="#029273"
                             BorderThickness="2"
                             Padding="10,5"
                             MaxLength="15"
                             Text="PLAYER"/>
                </StackPanel>

                <!-- Przyciski -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="SAVE"
                            FontFamily="OCR A Extended"
                            FontSize="30"
                            Foreground="#12b491"
                            Background="#262c33"
                            BorderBrush="#029273"
                            BorderThickness="2"
                            Padding="30,10"
                            Margin="10,0"
                            Click="SaveScore_Click"/>

                    <Button Content="MENU"
                            FontFamily="OCR A Extended"
                            FontSize="30"
                            Foreground="#ff5555"
                            Background="#262c33"
                            BorderBrush="#ff5555"
                            BorderThickness="2"
                            Padding="30,10"
                            Margin="10,0"
                            Click="Main_Click"/>
                </StackPanel>

                <!-- Komunikat o zapisie -->
                <TextBlock x:Name="SaveConfirmText"
                           Text=""
                           FontFamily="OCR A Extended"
                           FontSize="20"
                           Foreground="#12b491"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>