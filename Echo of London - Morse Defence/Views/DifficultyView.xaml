<UserControl x:Class="Echo_of_London___Morse_Defence.Views.DifficultyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Echo_of_London___Morse_Defence.Views"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280"
             Background="#151b21">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="StackPanelButton">
            <Setter Property="Background" Value="#262c33"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontFamily" Value="OCR A Extended"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="Foreground" Value="#029273"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="POZIOM TRUNDOŚCI" FontFamily="OCR A Extended" FontSize="60" Foreground="#029273" HorizontalAlignment="Center" Margin="0,0,0,40"/>
        <Button Content="ŁATWY" Style="{StaticResource StackPanelButton}" Click="Easy_Click"/>
        <Button Content="NORMALNY" Style="{StaticResource StackPanelButton}" Click="Mid_Click"/>
        <Button Content="TRUDNY" Style="{StaticResource StackPanelButton}" Click="Hard_Click"/>
        <Button Content="WRÓĆ" Style="{StaticResource StackPanelButton}" Foreground="#ff5555" Click="Back_Click"/>
        <CheckBox Content="ŚCIĄGA KODÓW" FontFamily="OCR A Extended" FontSize="30" Foreground="#029273" HorizontalAlignment="Center" Margin="600,-840,0,0" VerticalContentAlignment="Center" Height="39" Checked="Tip_Checked"/>
    </StackPanel>

</UserControl>
