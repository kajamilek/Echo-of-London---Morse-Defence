<UserControl x:Class="Echo_of_London___Morse_Defence.Views.OptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Echo_of_London___Morse_Defence.Views"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1080"
             Background="#151b21">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="StackPanelButton">
            <Setter Property="Background" Value="#262c33" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontFamily" Value="OCR A Extended" />
            <Setter Property="FontSize" Value="40" />
            <Setter Property="Foreground" Value="#029273" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="300" />
            <Setter Property="Height" Value="100" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="OPTIONS" FontFamily="OCR A Extended" FontSize="80" Foreground="#029273" HorizontalAlignment="Center" Margin="0,0,0,40" />
        <Button Content="ONE BUTTON" Style="{StaticResource StackPanelButton}" Click="OneButton_Click" />
        <Button Content="TWO BUTTON" Style="{StaticResource StackPanelButton}"  Click="TwoButton_Click" Margin="0,0,0,50" />
        <Button Content="BACK" Style="{StaticResource StackPanelButton}"  Foreground="#ff5555" Click="Back_Click" />
    </StackPanel>
</UserControl>