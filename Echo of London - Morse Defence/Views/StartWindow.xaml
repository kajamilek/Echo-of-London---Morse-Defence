<Window x:Class="Echo_of_London___Morse_Defence.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Echo_of_London___Morse_Defence"
        mc:Ignorable="d"
                Title="Echo of London - Morse Defence"
        Height="720" Width="1280"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#151b21">

    <Window.Resources>
        <Style TargetType="Button" x:Key="StackPanelButton">
            <Setter Property="Background" Value="#262c33"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontFamily" Value="OCR A Extended"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="Foreground" Value="#029273"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,40">
        <Label Content="Echo of London - Morse Defence" FontFamily="OCR A Extended" FontSize="60" Foreground="#029273" HorizontalAlignment="Center" Margin="0,0,0,40"/>
        <Button x:Name="StartButton" Content="START" Style="{StaticResource StackPanelButton}" Click="Button_Click_Start"/>
        <Button x:Name="OptionsButton" Content="OPCJE" Style="{StaticResource StackPanelButton}" Click="Button_Click_Options"/>
        <Button x:Name="ScoreboardButton" Content="TABELA WYNIKÓW" Style="{StaticResource StackPanelButton}" FontSize="30" Click="Button_Click_Scoreboard"/>
        <Button x:Name="OutButton" Content="WYJŚCIE" Style="{StaticResource StackPanelButton}" Foreground="#ff5555" Click="Button_Click_Out"/>
    </StackPanel>
</Window>
